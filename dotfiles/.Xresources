Xft*antialias: true
Xft*hinting: true
Xft*hintstyle: hintfull

xmessage*international: true
xmessage*message.scrollVertical: Never

xterm*VT100.geometry: 80x30
xterm*background: #000000
xterm*foreground: #ffffff

! --- standard colors ---

! black
xterm*color0: #000000

! bright_black
xterm*color8: #414141

! red
xterm*color1: #d6580f

! bright_red
xterm*color9: #f7b28a

! green
xterm*color2: #0fd658

! bright_green
xterm*color10: #8af7b2

! yellow
xterm*color3: #8dd60f

! bright_yellow
xterm*color11: #cff78a

! blue
xterm*color4: #580fd6

! bright_blue
xterm*color12: #b28af7

! magenta
xterm*color5: #d60f8d

! bright_magenta
xterm*color13: #f78acf

! cyan
xterm*color6: #0f8dd6

! bright_cyan
xterm*color14: #8acff7

! white
xterm*color7: #cecece

! bright_white
xterm*color15: #ffffff


xterm*faceName:*-terminus-medium-r-normal--18-*-*-*-*-*-iso10646-1
xterm*faceSize: 10.0
xterm*faceSize1: 5.0
xterm*faceSize2: 8.0
xterm*faceSize3: 9.0
xterm*faceSize4: 12.0
xterm*faceSize5: 18.0
xterm*faceSize6: 22.0

xterm*cutNewLine: false
xterm*cutToBeginningOfLine: false
xterm*charClass: 33:48,35:48,37-38:48,43-47:48,58:48,61:48,63-64:48,95:48,126:48
!! XTerm*VT100.charClass: 33:48,35:48,37:48,42:48,45-47:48,64:48,95:48,126:48
!
! from https://github.com/majutsushi/urxvt-font-size
URxvt.font: xft:cousine:size=10
URxvt.perl-ext-common: font-size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal
