#!/bin/bash
echo */* | tr ' ' '\n' > .listen_all
touch .listen_done
for i in $(cat .listen_all .listen_done | awk ' { print $1 } ' | sort | uniq -u | shuf); do
  n=__nothing
  ls $i/*.mp3 > /dev/null
  if [[ $? == "0" ]]; then
    while [[ 0 ]]; do
      mpv --no-audio-display $i
      echo -n "$i >>> "
      read n
      [[ $n == 'r' ]] && continue
      break
    done

    [[ $n == 'purge' ]] && album-purge $i
    if [[ $n == 's' ]]; then
      echo "Skipping ... "
      n="__skipping"
    else
      n="__rating_$n"
    fi
  fi
  echo $i $n $(date +%Y%m%d) >> .listen_done
done
