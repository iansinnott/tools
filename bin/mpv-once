#!/bin/bash
echo */* | tr ' ' '\n' > .listen_all
touch .listen_done
for i in $(cat .listen_all .listen_done | awk ' { print $1 } ' | sort | uniq -u | shuf); do
  ls $i/*.mp3 > /dev/null
  n=nothing
  if [[ $? == "0" ]]; then
    mpv --no-audio-display $i
    echo -n "$i >>> "
    read n
    [[ $n == 'purge' ]] && album-purge $i
    if [[ $n == 'skip' ]]; then
      echo "Skipping ... "
      continue
    fi
    n="__rating_$n"
  fi
  echo $i $n >> .listen_done
done
